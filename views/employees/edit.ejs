<% include ../partials/header %>
<div class="ui container">
    <form class="ui form" action="/employee/<%=employee._id%>?_method=PUT" method="POST">
            <input type="text" value="<%= employee.firstName %>" name="firstName" placeholder="First Name">
            <input type="text" value="<%= employee.lastName %>" name="lastName" placeholder="Last Name">
            <input type="text" value="<%= employee.employeeNumber %>" name="employeeNumber" placeholder="Employee Number">
            <input type="text" value="<%= employee.address %>" name="address" placeholder="Address">
            <input type="text" value="<%= employee.phone %>" name="phone" placeholder="phone">
            <input type="text" value="<%= employee.DOB %>" name="DOB" placeholder="Date of Birth">
            <input type="text" value="<%= employee.sickDaysLeft %>" name="sickDaysLeft" placeholder="Sick Days Left">
            <input type="text" value="<%= employee.vacationDaysLeft %>" name="vacationDaysLeft" placeholder="Vacation Days Left">
            <button>Submit</button>
    </form>
</div>
<% include ../partials/footer %>